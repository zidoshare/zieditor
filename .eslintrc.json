{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],//tab占两个空格
        // "linebreak-style": [
        //     "error",
        //     "windows"
        // ], 使用windows结束符
        "quotes": [
            "error",
            "single"
        ],//强制使用单引号
        "semi": [
            "error",
            "never"
        ],
        "no-console":"off",
        "no-cond-assign":"off"
    }
}